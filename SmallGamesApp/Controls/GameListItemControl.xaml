<UserControl x:Class="SmallGamesApp.Controls.GameListItemControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SmallGamesApp.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="100" MaxHeight="100">
    <Grid>
        <!--#region Definitions-->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <!--#endregion-->
        <Viewbox Grid.Column="0" Margin="10">
            <TextBlock Text="Minesweeper" Foreground="{StaticResource nord6}"/>
        </Viewbox>
        <Viewbox Stretch="Uniform" Grid.Column="1" HorizontalAlignment="Right" Visibility="Hidden">
            <Polygon Points="0,25 25,50 25,0" StrokeThickness="0" Fill="{StaticResource nord10}"/>
        </Viewbox>
        <RadioButton Grid.Column="0" BorderThickness="0" 
                VerticalContentAlignment="Center" Grid.ColumnSpan="2" 
                Click="Button_Click" Style="{StaticResource GameListButton}"/>
    </Grid>
</UserControl>
