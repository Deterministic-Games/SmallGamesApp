<Window x:Class="Minesweeper.MinesweeperWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Minesweeper.Views"
        xmlns:root="clr-namespace:Minesweeper"
        xmlns:viewmodels="clr-namespace:Minesweeper.ViewModels"
        xmlns:toolbox="clr-namespace:Toolbox;assembly=Toolbox" 
        d:DataContext="{d:DesignInstance Type=viewmodels:MinesweeperViewModel}"
        mc:Ignorable="d"
        Title="MinesweeperWindow" Height="450" Width="500" Closing="Window_Closing">
    <Window.Resources>
        <root:BackgroundConverter x:Key="backgroundconverter"/>
        <root:ForegroundConverter x:Key="foregroundconverter"/>
        <root:InverseBoolValueConverter x:Key="boolconverter"/>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="6*"/>
            <ColumnDefinition Width="19*"/>
        </Grid.ColumnDefinitions>
        <Border Grid.Column="1" Background="Beige">
            <local:MinesweeperView x:Name="MinesweeperView"/>
        </Border>
    </Grid>

</Window>
